<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-3 side-ber">
    	<%= render 'admin/restaurants/admin_sideber' %>
    </div>
    <div class="col-xs-5">
		<h3>新規メニュー 登録フォーム</h3>
		<%= form_for @drink, url: admin_drinks_path, local: true do |form| %>
		  <% if @drink.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@drink.errors.count, "error") %> prohibited this drink from being saved:</h2>

		      <ul>
		      <% @drink.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="form-group">
		    <%= form.label :drink_category, 'フードカテゴリー' %>
		    <%= form.collection_select :drink_category_id, current_restaurant.drink_categories, :id, :drink_category_name, {include_blank: "選択してください"}, class: "form-control" %>
		  </div>


		  <div class="form-group">
		    <%= form.label :name, 'メニュー名' %>
		    <%= form.text_field :drink_name, class: "form-control" %>
		  </div>


		  <div class="form-group">
		    <%= form.label :explanation, '商品説明' %>
		    <%= form.text_field :explanation, class: "form-control" %>
		  </div>

		  <div class="form-group">
		    <%= form.label :price, '価格（税抜）' %>
		    <%= form.text_field :price, class: "form-control" %>
		  </div>

		  <div class="actions">
		    <%= form.submit "作成", class: "btn btn-md btn-primary form-control" %>
		  </div>
		<% end %>

		<%= link_to '一覧へ', '#' %>

    </div>
  </div>
</div>